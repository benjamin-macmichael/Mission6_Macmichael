@{
    ViewData["Title"] = "The Joel Hilton Film Collection";
}

@model Movie

<!--This page has the form for submitting movies into the database
    The Edited, Lent To, and Notes are not required fields, but everything else is
-->

<div class="text-center">
    <h1 class="display-4">Enter a Movie</h1>
</div>

<form method="post">

    <input type="hidden" asp-for="MovieId" />

    <select asp-for="CategoryId">
        <option value="">Select a Category</option>
        @foreach (Categories m in ViewBag.Categories)
        {
            <option value="@m.CategoryId">@m.Category</option>
        }
    </select>
    <br />
    <label asp-for="Title">Title:</label>
    <input asp-for="Title" />
    <br />
    <label asp-for="Year">Year:</label>
    <input asp-for="Year" />
    <br />
    <label asp-for="Director">Director:</label>
    <input asp-for="Director" />
    <br />
    <label asp-for="Rating">Rating:</label>
    <select asp-for="Rating">
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="TV-PG">TV-PG</option>
        <option value="TV-14">TV-14</option>
        <option value="TV-Y7">TV-Y7</option>
        <option value="TV-G">TV-G</option>
        <option value="R">R</option>
        <option value="NR">NR</option>
        <option value="U">UR</option>
    </select>
    <br />
    <label asp-for="Edited">Edited:</label>
    <select asp-for="Edited">
        <option value="False">No</option>
        <option value="True">Yes</option>
    </select>
    <br />
    <label asp-for="LentTo">Lent To:</label>
    <input asp-for="LentTo" />
    <br />
    <label asp-for="CopiedToPlex">Copied To Plex:</label>
    <select asp-for="CopiedToPlex">
        <option value="False">No</option>
        <option value="True">Yes</option>
    </select>
    <br />
    <label asp-for="Notes">Notes:</label>
    <input asp-for="Notes"/>
    <br />
    <button type="submit">Submit Application</button>

    <div asp-validation-summary="All"></div>

</form>
